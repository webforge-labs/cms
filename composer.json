{
    "name": "webforge/cms",
    "description": "A cms written in knockoutjs and twitter-bootstrap on top of symfony",

    "autoload": {
        "psr-0": {
            "Webforge\\CmsBundle": "src/php/",
            "Webforge\\Gaufrette": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-0": { 
            "AppBundle": "src/php/"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": ">=5.4.0",
        
        "doctrine/orm": ">=2.2.3,<2.5",
        "webforge/utils": "^1.0@dev",
        "symfony/symfony": "2.7.*",
        "doctrine/doctrine-bundle": "^1.6@dev",
        "symfony/swiftmailer-bundle": "^2.3@dev",
        "symfony/monolog-bundle": "^2.8@dev",
        "sensio/framework-extra-bundle": "^3.0@dev",
        "jms/serializer-bundle": "^1.1@dev",
        "webmozart/json": "^1.1@dev",
        "jbroadway/urlify": "^1.0@dev",
        "symfony/var-dumper": "2.7.*@stable",
        "friendsofsymfony/user-bundle": "2.0.*",
        "webforge/doctrine": "~1.2.6",
        "webforge/collections": "1.0.*@stable",
        "webforge/symfony": "~1.4.3",
        "liip/functional-test-bundle": "1.3.*@dev",
        "knplabs/knp-gaufrette-bundle": "^0.3.0",
        "liip/imagine-bundle": "^1.5",
        "nelmio/alice": "^2.2",
        "ramsey/uuid": "^3.5",
        "nicmart/tree": "^0.2.7"
    },
    "require-dev": {
        "webforge/testdata-repository": "0.2.2-alpha",
        "webforge/testing": "^1.2.2"
    },
    "suggest": {
      "nelmio/alice": "to use alice-fixtures in your tests (use dev dependency version 2.x)"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Scheit",
            "email": "p.scheit@ps-webforge.com"
        }
    ],
    "minimum-stability": "dev",

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "www",
        "branch-alias": {
            "dev-master": "1.9.x-dev"
        }
    }
}
