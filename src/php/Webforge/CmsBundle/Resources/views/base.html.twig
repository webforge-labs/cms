{%include 'WebforgeCmsBundle:default:head.html.twig' %}
  <body role="document">
    {%include 'WebforgeCmsBundle:default:navbar.html.twig' %}

    <div class="container-fluid invisible" id="content-container" data-bind="invisible: loading">
      <div class="row">
        <div class="col-xs-9" data-bind="with: tabs">
          {%include 'WebforgeCmsBundle:default:tabs.html.twig' %}
        </div>
        <div class="col-xs-3" role="sidebar">
          {%include 'WebforgeCmsBundle:default:sidebar.html.twig' %}
        </div>
      </div>
    </div>

    {% block body %}{% endblock %}

    {%include 'WebforgeCmsBundle:components:file-manager-modal.html.twig' %}

    <script type="text/javascript">
      require(['cms/main'], function(main) {
        main({{data|raw}});
      });
    </script>

{%include 'WebforgeCmsBundle:default:foot.html.twig' %}
